{
    // EDITOR
    "editor.fontFamily": "Hack Nerd Font, 'Inconsolata Condensed', Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "editor.fontWeight": "300",
    "editor.fontSize": 12,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.insertSpaces": true,
    "editor.smoothScrolling": true,
    "editor.lineHeight": 20,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs":"active",

		// TERMINAL
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontFamily": "Hack Nerd Font",

    // EXPLORER
    "explorer.openEditors.visible": 0,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.decorations.badges": false,

    // FILES
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "*.txt": "plaintext",
        "*.tmpl": "gotemplate"
      },
      "files.autoSave": "afterDelay",
      "files.autoSaveDelay": 50000,
      "files.insertFinalNewline": true,
      "files.trimTrailingWhitespace": true,
      "files.exclude": {
        "**/*.tfplan": true,
        "**/.terraform.lock.hcl": true,
        "**/.terraform": true,
        ".gitconfig": true,
        ".pytest_cache/": true,
        ".sass-cache": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "Godeps/": true,
        "vendor/": true,
        "yarn.lock": true,
		".bumpversion.cfg": true,
		".coverage": true,
		".coveragerc": true,
		".flake8": true,
      },
      "files.watcherExclude": {
        "vendor/**": true
      },

    // EXTENSIONS
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": false,

    // WORKBENCH=
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": true,
    "workbench.editor.showIcons": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "vscode-great-icons",

    // GOLANG
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
      "--enable-all", "--disable", "exhaustivestruct,gochecknoglobals,lll,wsl,maligned,misspell,nlreturn"
    ],
    "go.vetOnSave": "off",
    "go.buildOnSave": "package",
    // "go.delveConfig": {
    //   "dlvLoadConfig": {
    //     "followPointers": true,
    //     "maxVariableRecurse": 1,
    //     "maxStringLen": 64,
    //     "maxArrayValues": 64
    //   },
    //   "apiVersion": 1,
    //   "showGlobalVariables": true
    // },
    "go.coverageDecorator": {
        "type": "gutter"
    },
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.testTimeout": "3m",
    "go.coverOnSingleTest": true,
    "go.buildFlags": [
        "-v"
    ],

    // SEARCH
    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true,
        "vendor/**": true
      },

    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "search.showLineNumbers": true,

    // BREADCRUMBS
    "breadcrumbs.enabled": true,

    // PYTHON
    "python.languageServer": "Pylance",
    "python.venvPath": "~/.virtualenvs",
	"python.linting.enabled": true,
    "python.linting.prospectorEnabled": true,
	"python.linting.prospectorArgs": ["-X"],
	"[python]": {
      "editor.defaultFormatter": "ms-python.python",
      "editor.formatOnSave": true,
      "editor.formatOnPaste": false,
    },

    // GITLENS
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.advanced.messages": {
        "suppressCommitNotFoundWarning": true
    },


  "redhat.telemetry.enabled": false,
"telemetry.telemetryLevel": "crash"
}
