{
    // EDITOR
    "editor.fontFamily": "Roboto Mono, Hack Nerd Font, 'Inconsolata Condensed', Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.rulers": [
        150
    ],
    // "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "editor.fontSize": 12,
    "editor.minimap.enabled": false,
    "editor.insertSpaces": true,
    "editor.smoothScrolling": true,
    "editor.lineHeight": 20,
	  "editor.bracketPairColorization.enabled": true,
	  "editor.guides.bracketPairs":"active",

		// TERMINAL
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
	  "terminal.integrated.fontFamily": "Hack Nerd Font",

    // EXPLORER
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.decorations.badges": false,

    // FILES
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "*.txt": "plaintext",
        "*.tmpl": "gotemplate"
      },
      "files.autoSave": "afterDelay",
      "files.autoSaveDelay": 50000,
      "files.insertFinalNewline": true,
      "files.trimTrailingWhitespace": true,
      "files.exclude": {
        "**/*.tfplan": true,
        "**/.terraform.lock.hcl": true,
        "**/.terraform": true,
        ".gitconfig": true,
        ".pytest_cache/": true,
        ".sass-cache": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "Godeps/": true,
        "vendor/": true,
        ".coverage": true,
        ".coveragerc": true,
        // ".flake8": true,
        ".pip-cache/": true,
        ".ruff_cache/": true,
      },
      "files.watcherExclude": {
        "vendor/**": true
      },

    // EXTENSIONS
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": false,

    // WORKBENCH=
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showIcons": true,
    "workbench.editor.highlightModifiedTabs": true,

    // GOLANG
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
      "--enable-all", "--disable", "exhaustivestruct,gochecknoglobals,lll,wsl,maligned,misspell,nlreturn"
    ],
    "go.vetOnSave": "off",
    "go.buildOnSave": "package",
    "go.coverageDecorator": {
        "type": "gutter"
    },
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.testTimeout": "3m",
    "go.coverOnSingleTest": true,
    "go.buildFlags": [
        "-v"
    ],

    // SEARCH
    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true,
        "vendor/**": true
      },

    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "search.showLineNumbers": true,

    // BREADCRUMBS
    "breadcrumbs.enabled": true,

    // PYTHON
    "python.languageServer": "Pylance",
    "python.venvPath": "~/.virtualenvs",
	// "python.linting.enabled": true,
  //   "python.linting.prospectorEnabled": true,
	// "python.linting.prospectorArgs": ["-X"],
	"[python]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
      },
      "editor.defaultFormatter": "ms-python.black-formatter",
      "editor.formatOnSave": true,
      "editor.formatOnPaste": false,
    },

    // GITLENS
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.advanced.messages": {
        "suppressCommitNotFoundWarning": true
    },


  "redhat.telemetry.enabled": false,
"telemetry.telemetryLevel": "crash",
"grunt.autoDetect": "on",
"code-runner.runInTerminal": true,
"editor.stablePeek": true,
"aws.telemetry": false,
"[dockerfile]": {
  "editor.defaultFormatter": "foxundermoon.shell-format"
},
"window.zoomLevel": 2,
"diffEditor.ignoreTrimWhitespace": false,
"python.defaultInterpreterPath": "/Users/janilton.oliveira/.virtualenvs/valedaluz2",
"github.copilot.editor.enableAutoCompletions": true,
"makefile.configureOnOpen": true,
"git.ignoreMissingGitWarning": true,
}
