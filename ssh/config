# copy to ~/.ssh/config

Host gitlab.globoi.com
	ControlMaster auto
	ControlPersist 120
	IdentityFile ~/.ssh/id_rsa_globo

Host git.tsuru.globoi.com
	ControlMaster auto
	ControlPersist 120
	IdentityFile ~/.ssh/id_rsa_globo

Host github.com
	ControlMaster auto
	ControlPersist 120
	IdentityFile ~/.ssh/id_rsa

Host gitlab.com
	ControlMaster auto
	ControlPersist 120
	IdentityFile ~/.ssh/id_rsa

Host *
	User janilton
	# Always use SSH2.
	Protocol 2

	# Use a shared channel for all sessions to the same host,
	# instead of always opening a new one. This leads to much
	# quicker connection times.
	ControlMaster auto
	#ControlPath ~/.ssh/control/%C
	#ControlPath ~/.ssh/control/control:%h:%p:%r
	ControlPersist 1800
	# VisualHostKey yes

	# also this stuff
	#Compression yes
	TCPKeepAlive yes
	ServerAliveInterval 60
	ServerAliveCountMax 10
	StrictHostKeyChecking no
  	UseKeychain yes
